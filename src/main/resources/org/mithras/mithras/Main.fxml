<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #FFFDE7;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.mithras.mithras.MainController">
    <children>
        <ScrollPane prefHeight="200.0" prefWidth="200.0" fx:id="cardscrollpane">
        </ScrollPane>
        <Button fx:id="datasetbtn" mnemonicParsing="false" onAction="#openCSVBrowser" style="-fx-background-radius: 5em;" text="Dataset" StackPane.alignment="BOTTOM_LEFT">
            <StackPane.margin>
                <Insets bottom="25.0" left="25.0" />
            </StackPane.margin>
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Button alignment="BOTTOM_CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToModelSelection" text="Create Model" StackPane.alignment="BOTTOM_CENTER">
            <StackPane.margin>
                <Insets bottom="25.0" />
            </StackPane.margin>
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Button fx:id="datasetbtn1" mnemonicParsing="false" onAction="#openTranscriber" style="-fx-background-radius: 5em;" text="C" StackPane.alignment="BOTTOM_RIGHT">
            <font>
                <Font size="16.0" />
            </font>
            <StackPane.margin>
                <Insets bottom="25.0" right="25.0" />
            </StackPane.margin>
        </Button>
        <Button fx:id="datasetbtn2" mnemonicParsing="false" onAction="#openImporter" style="-fx-background-radius: 5em;" text="Import Models" StackPane.alignment="BOTTOM_LEFT">
            <font>
                <Font size="16.0" />
            </font>
            <StackPane.margin>
                <Insets bottom="25.0" left="120.0" />
            </StackPane.margin>
        </Button>
    </children>
</StackPane>
