<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
           style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21.0.1"
           fx:controller="org.mithras.mithras.MainController">
    <children>
        <GridPane prefHeight="400.0" prefWidth="600.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="194.0" minHeight="10.0" prefHeight="43.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="357.0" minHeight="10.0" prefHeight="357.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Training" textAlignment="CENTER"
                      GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                    <font>
                        <Font size="19.0"/>
                    </font>
                </Text>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Validation" textAlignment="CENTER"
                      GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                    <font>
                        <Font size="19.0"/>
                    </font>
                </Text>
                <StackPane fx:id="trainChartContainer" GridPane.rowIndex="1">
                    <!-- Placeholder for training chart -->
                </StackPane>
                <StackPane fx:id="validChartContainer" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <!-- Placeholder for validation chart -->
                </StackPane>
            </children>
        </GridPane>
        <Button mnemonicParsing="false" onAction="#switchToMain" text="Back" StackPane.alignment="BOTTOM_CENTER">
            <StackPane.margin>
                <Insets bottom="25.0"/>
            </StackPane.margin>
        </Button>
    </children>
</StackPane>
